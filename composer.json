{
  "name": "lalcebo/lumen-sdk",
  "description": "Lumen SDK - Expand Lumen framework in your projects.",
  "keywords": [
    "php",
    "php7",
    "sdk",
    "library",
    "php-sdk",
    "php-library",
    "laravel",
    "lumen",
    "validation",
    "form",
    "api",
    "request"
  ],
  "type": "library",
  "homepage": "https://github.com/lalcebo/lumen-sdk",
  "time": "2021-06-21",
  "license": "MIT",
  "authors": [
    {
      "name": "Jorge P. Hernandez Lalcebo",
      "email": "lalcebo2003@gmail.com",
      "homepage": "https://www.linkedin.com/in/lalcebo"
    }
  ],
  "require": {
    "php": "^7.3|^8.0",
    "lalcebo/sdk-php-helpers": "^1.0",
    "laravel/lumen-framework": "^7.0|^8.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "mockery/mockery": "^1.4",
    "php-parallel-lint/php-console-highlighter": "^0.5",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "phpunit/phpunit": "^9.0",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Lalcebo\\Lumen\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Lalcebo\\Lumen\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "config": {
    "sort-packages": true
  },
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-master": "0.1-dev"
    }
  },
  "conflict": {
    "laravel/framework": "*"
  },
  "scripts": {
    "lint": "parallel-lint . --exclude vendor",
    "format": "php-cs-fixer fix",
    "phpunit": "phpunit --coverage-text -colors=always --configuration phpunit.xml",
    "tests": [
      "@lint",
      "@phpunit"
    ]
  }
}
